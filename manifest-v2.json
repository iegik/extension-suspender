{
  "manifest_version": 2,
  "name": "Tab Suspender",
  "description": "Suspends inactive tabs to save memory and CPU usage",
  "version": "1.0.1",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "*://*/*"
  ],
  "applications": {
    "gecko": {
      "id": "{0a6226a4-979c-411e-ae28-ce8993216a80}"
    }
  },
  "page_action": {
    "default_icon": "favicon.ico"
  },
  "icons": {
    "128": "favicon-x1.svg",
    "256": "favicon-x2.svg"
  },
  "background": {
    "scripts": ["sw.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}